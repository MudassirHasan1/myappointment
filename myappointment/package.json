{
  "name": "myappointment",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@cap-js/hana": "^2",
    "@sap/cds": "^9",
    "express": "^4",
    "@sap/xssec": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2.0.4",
    "@sap/cds-dk": "^9",
    "rimraf": "^5.0.5",
    "mbt": "^1.2.29"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-calendar": "cds watch --open calendar/index.html?sap-ui-xx-viewCache=false --livereload false",
    "watch-zcalendar": "cds watch --open zcalendar/index.html?sap-ui-xx-viewCache=false --livereload false",
    "undeploy": "cf undeploy myappointment --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "sqlite"
      },
      "auth": "dummy",
      "[production]": {
        "db": {
          "kind": "hana"
        },
        "auth": "xsuaa"
      },
      "html5-repo": true
    }
  },
  "private": true,
  "workspaces": [
    "app/*"
  ]
}