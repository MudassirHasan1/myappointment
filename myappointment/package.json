{
  "name": "myappointment",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@cap-js/hana": "^2",
    "@sap/cds": "^9",
    "express": "^4",
    "@sap/xssec": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2.0.4",
    "@sap/cds-dk": "^9",
    "cds-plugin-ui5": "^0.13.0"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-calendar": "cds watch --open calendar/index.html?sap-ui-xx-viewCache=false --livereload false"
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "sqlite"
      },
      "auth": "dummy",
      "[production]": {
        "db": {
          "kind": "hana"
        },
        "auth": "xsuaa"
      },
      "html5-repo": true
    }
  },
  "private": true,
  "workspaces": [
    "app/*"
  ]
}
